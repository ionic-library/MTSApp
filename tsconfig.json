{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "moduleResolution": "node",
    "module": "es2015",
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./src",
    "paths": {
      "@mocks/*": ["mocks/*"],
      "@mock-providers/*": ["mocks/providers/*"],
      "@models/*": ["models/*"],
      "@providers": ["providers/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts"],
  "compileOnSave": true,
  "atom": {
    "rewriteTsconfig": false
  }
}
